<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- AR Camera View -->
    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Top instruction chip -->
    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_glass_chip"
        android:paddingHorizontal="20dp"
        android:paddingVertical="12dp"
        android:text="Enter starting point name below"
        android:textColor="@color/text_primary"
        android:textSize="14sp" />

    <!-- Recording Status Pill -->
    <TextView
        android:id="@+id/tvRecordingStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/bg_recording_badge"
        android:paddingHorizontal="24dp"
        android:paddingVertical="10dp"
        android:text="â— RECORDING"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:letterSpacing="0.1"
        android:visibility="gone" />

    <!-- Bottom control panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_bottom_panel"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Starting Point Input (visible before recording) -->
        <LinearLayout
            android:id="@+id/layoutStartPoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Starting Point"
                android:textColor="@color/accent_gold"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etStartPoint"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:hint="Enter start location (e.g., Main Gate)"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:background="@drawable/bg_input"
                android:paddingHorizontal="16dp"
                android:textSize="14sp"
                android:inputType="text"
                android:imeOptions="actionDone" />

            <Button
                android:id="@+id/btnStartRecording"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="ðŸŽ¬  Start Floor Mapping"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:background="@drawable/bg_btn_primary"
                android:layout_marginTop="14dp" />
        </LinearLayout>

        <!-- Path Info (visible during recording) -->
        <TextView
            android:id="@+id/tvPathInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/accent_green"
            android:textSize="13sp"
            android:gravity="center"
            android:layout_marginBottom="14dp"
            android:visibility="gone" />

        <!-- Mark Waypoint Button (visible during recording) -->
        <Button
            android:id="@+id/btnMarkWaypoint"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="ðŸ“Œ  Mark Named Waypoint"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_primary"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />

        <!-- Capture Text Button (visible during recording) -->
        <Button
            android:id="@+id/btnCaptureText"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="ðŸ”  Capture Text Location (OCR)"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_ocr"
            android:textSize="14sp"
            android:layout_marginBottom="10dp"
            android:visibility="gone" />

        <!-- Stop Recording Button (visible during recording) -->
        <Button
            android:id="@+id/btnStopRecording"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:text="â¹  Stop and Save Floor Map"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_outline"
            android:visibility="gone" />

        <!-- Waypoint counter -->
        <TextView
            android:id="@+id/tvWaypointCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waypoints: 0 | Named: 0"
            android:textColor="@color/text_secondary"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:visibility="gone" />

        <!-- Emergency Button -->
        <Button
            android:id="@+id/btnEmergency"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸš¨  TRIGGER EMERGENCY"
            android:background="@drawable/bg_btn_danger"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</FrameLayout>