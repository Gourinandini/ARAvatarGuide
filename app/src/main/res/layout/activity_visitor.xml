<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisitorActivity">

    <android.opengl.GLSurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Top Bar Container -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvOcrStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="OCR Scanning..."
            android:textColor="@color/accent_green"
            android:textSize="13sp"
            android:background="@drawable/bg_glass_chip"
            android:paddingHorizontal="14dp"
            android:paddingVertical="8dp" />

        <Button
            android:id="@+id/btnMap"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="ðŸ—ºï¸ Map"
            android:textSize="13sp"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/bg_btn_primary"
            android:paddingHorizontal="18dp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <!-- Status chip -->
    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/bg_glass_chip"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textColor="@color/text_primary"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topBar" />

    <!-- Destination chip -->
    <TextView
        android:id="@+id/tvDestination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/accent_green"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_glass_chip"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvStatus" />

    <!-- Bottom Controls Container -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Direction text -->
        <TextView
            android:id="@+id/tvDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="14dp"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/accent_gold"
            android:textSize="18sp"
            android:background="@drawable/bg_glass_chip"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:visibility="gone" />

        <!-- Initial State / Microphone Container -->
        <LinearLayout
            android:id="@+id/initialStateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/bg_bottom_panel"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="20dp">

            <TextView
                android:id="@+id/tvAvailableLocations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loading locations..."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:maxLines="4"
                android:ellipsize="end"
                android:layout_marginBottom="16dp" />

            <TextView
                android:id="@+id/tvSpeechInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap microphone to ask for directions"
                android:textColor="@color/text_hint"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="4dp" />

            <Button
                android:id="@+id/btnMicrophone"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:text="ðŸŽ¤"
                android:textSize="24sp"
                android:background="@drawable/bg_mic_button"
                android:layout_marginTop="12dp"
                android:elevation="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Avatar Placeholder -->
    <FrameLayout
        android:id="@+id/avatarContainer"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>